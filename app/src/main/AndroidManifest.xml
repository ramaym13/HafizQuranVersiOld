<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.d3ifcool.hafizquran">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/logo_new"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/logo_new"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Activity.TajwidActivity"
            android:label="Daftar Tajwid" />
        <activity android:name=".Activity.DoaActivity"
            android:label="Daftar Doa"/>
        <activity
            android:name=".Activity.KompasActivity"
            android:label="Kompas" />
        <activity
            android:name=".Activity.AyatActivity"
            android:parentActivityName=".Activity.SurahActivity" />
        <activity
            android:name=".Activity.SurahActivity"
            android:label="Daftar Surah"
            android:parentActivityName=".MainActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>